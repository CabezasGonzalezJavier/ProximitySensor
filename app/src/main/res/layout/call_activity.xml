<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/call_activity_relative_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.thedeveloperworldisyours.proximitysensor.CallActivity">
    <ImageButton
        android:src="@drawable/ic_call_hook_off"
        android:layout_centerHorizontal="true"
        android:id="@+id/call_activity_hook_off"
        android:layout_width="@dimen/call_activity_button_call_size"
        android:layout_height="@dimen/call_activity_button_call_size"
        android:layout_alignParentBottom="true"
        android:onClick="activateSensor"
        android:background="@drawable/hook_off" />

    <ImageButton
        android:id="@+id/call_activity_hung_up"
        android:layout_centerHorizontal="true"
        android:layout_width="@dimen/call_activity_button_call_size"
        android:layout_height="@dimen/call_activity_button_call_size"
        android:visibility="gone"
        android:layout_alignParentBottom="true"
        android:onClick="deactivateSensor"
        android:src="@drawable/ic_call_hook_off"
        android:background="@drawable/hung_up"/>
</RelativeLayout>
